@model IEnumerable<WiserSoft.UI.Models.Ferias_Agricolas>

@{
    ViewBag.Title = "Ferias Agricolas";
}

@section scripts
{
    <script src="~/Scripts/Ferias_Agricolas/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/Ferias_Agricolas/index.js"></script>
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?key= AIzaSyC0keSm3aVkik-i1wbA4ekls63uyK4oPic "></script>
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Ferias Agricolas
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-map-marker"></i> @Html.ActionLink("Ferias Agricolas", "Index", "Ferias_Agricolas")
                    </li>
                    <li class="active">
                        <i class="fa fa-tag"></i> Agricultores
                    </li>
                </ol>
            </div>
        </div>


        <div class="row">
            <div class="col-xs-6"">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Nombre")
                                </th>
                                <th>
                                    @Html.DisplayName("Distrito")
                                </th>
                                <th>
                                    @Html.ActionLink("Crear feria", "Create")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fa_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Distritos.dis_nombre)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { idFeria = item.Fa_Id }, new { @class = "btn btn-custom" })  |
                                        @Html.ActionLink("Eliminar", "Delete", new { idFeria = item.Fa_Id }, new { @class = "btn btn-custom" })
                                    </td>
                                </tr>
                                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-xs-6">
                <div id="mapa" style="width:100%;min-height:300px;"></div>
            </div>

        </div>
    </div>
</div>


<div style="text-align:center">
    @Html.ValidationMessage("error_delete_feria", new { @class = "text-danger" })
</div>
<input type="text" id="txtferias" value="@ViewData["ferias"]" style="display:none" />
