@model IEnumerable<WiserSoft.UI.Models.Agricultores>

@{
    ViewBag.Title = "Agricultores";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Agricultores
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-child"></i> @Html.ActionLink("Agricultores", "Index", "Agricultores")
                    </li>
                    <li class="active">
                        <i class="fa fa-tag"></i> Productos
                    </li>
                </ol>
            </div>
        </div>
        

        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <div style="text-align:center">
                        @Html.ValidationMessage("error_delete", new { @class = "text-danger" })
                    </div>
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Cédula")
                                </th>
                                <th>
                                    @Html.DisplayName("Nombre")
                                </th>
                                <th>
                                    @Html.DisplayName("Apellidos")
                                </th>
                                <th>
                                    @Html.DisplayName("Alias")
                                </th>
                                <th>
                                    @Html.DisplayName("Descripción")
                                </th>
                                <th>
                                    @Html.DisplayName("Distrito")
                                </th>
                                <th>
                                    @Html.DisplayName("Teléfono")
                                </th>
                                <th>
                                    @Html.DisplayName("Feria que asiste")
                                </th>
                                <th>
                                    @Html.DisplayName("Foto")
                                </th>
                               
                                <th>@Html.ActionLink("Crear agricultor", "Create")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Agr_Cedula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Agr_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Agr_Apellidos)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Agr_Alias)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Agr_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Distritos.dis_nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Agr_Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ferias_Agricolas.Fa_Nombre)
                                    </td>
                                    <td>
                                        @{
                                            var base64 = Convert.ToBase64String(item.Agr_Foto);
                                            var imgSrc = String.Format("data:image/gif; base64, {0}", base64);
                                        }
                                        <img src="@imgSrc" class="img-responsive img-rounded" width="200" height="200" />

                                    </td>
                                   
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.Agr_Cedula }, new { @class = "btn btn-custom" })  |
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Agr_Cedula }, new { @class = "btn btn-custom" })
                                    </td>
                                </tr>
                                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
