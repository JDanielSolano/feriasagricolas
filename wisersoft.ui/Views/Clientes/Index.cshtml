@model IEnumerable<WiserSoft.UI.Models.Clientes>

@{
    ViewBag.Title = "Clientes";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Clientes
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-child"></i> @Html.ActionLink("Clientes", "Index", "Clientes")
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Cédula")
                                </th>
                                <th>
                                    @Html.DisplayName("Nombre")
                                </th>
                                <th>
                                    @Html.DisplayName("Apellidos")
                                </th>
                                <th>
                                    @Html.DisplayName("Distrito")
                                </th>
                                <th>
                                    @Html.DisplayName("Teléfono")
                                </th>
                                <th>
                                    @Html.DisplayName("Correo electrónico")
                                </th>
                                <th>
                                    @Html.DisplayName("Usuario")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cl_Cedula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cl_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cl_Apellidos)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Distritos.dis_nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cl_Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cl_Correo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cl_Usuario)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
