@model IEnumerable<WiserSoft.UI.Models.Clasificacion>

@{
    ViewBag.Title = "Clasificación";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Clasificaciones
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-th-list"></i> @Html.ActionLink("Clasificación", "Index", "Clasificacion")
                    </li>
                    <li class="active">
                        <i class="fa fa-tag"></i> Productos
                    </li>
                </ol>
            </div>
            <div style="text-align:center">
                @Html.ValidationMessage("error_delete", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName("Tipo")</th>
                                <th>@Html.ActionLink("Crear nueva clasificación", "Create")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Clasi_Nombre)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { Clasi_Id = item.Clasi_Id }, new { @class = "btn btn-custom" })  |
                                        @Html.ActionLink("Eliminar", "Delete", new { Clasi_Id = item.Clasi_Id }, new { @class = "btn btn-custom" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
