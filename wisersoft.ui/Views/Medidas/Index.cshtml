@model IEnumerable<WiserSoft.UI.Models.Medidas>

@{
    ViewBag.Title = "Medidas";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Unidades de medida
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-sort-numeric-asc"></i> @Html.ActionLink("Medidas", "Index", "Medidas")
                    </li>
                    <li class="active">
                        <i class="fa fa-ticket"></i> Unidades
                    </li>
                </ol>
            </div>
            <div style="text-align:center">
                @Html.ValidationMessage("error_delete", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName("Tipo")</th>
                                <th>@Html.ActionLink("Crear nueva medida", "Create")</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mdd_Nombre)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { Mdd_Id = item.Mdd_Id }, new { @class = "btn btn-custom" }) |
                                        @Html.ActionLink("Eliminar", "Delete", new { Mdd_Id = item.Mdd_Id }, new { @class = "btn btn-custom" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
