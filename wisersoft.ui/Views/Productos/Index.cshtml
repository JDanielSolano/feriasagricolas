@model IEnumerable<WiserSoft.UI.Models.Productos>

@{
    ViewBag.Title = "Productos";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Productos
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-shopping-cart"></i> @Html.ActionLink("Productos", "Index", "Productos")
                    </li>
                    <li class="active">
                        <i class="fa fa-shopping-cart"></i> Mercancía
                    </li>
                </ol>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <div style="text-align:center">
                        @Html.ValidationMessage("error_delete_producto", new { @class = "text-danger" })
                    </div>
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName("Tipo")</th>
                                <th>@Html.DisplayName("Medida")</th>
                                <th>@Html.DisplayName("Precio")</th>
                                <th>@Html.DisplayName("Clasificación")</th>
                                <th>@Html.DisplayName("Foto")</th>
                                <th>@Html.ActionLink("Crear nuevo producto", "Create")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pdt_nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Medidas.Mdd_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pdt_precio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Clasificacion.Clasi_Nombre)
                                    </td>
                                    <td>
                                        @{
                                            var base64 = Convert.ToBase64String(item.Pdt_foto);
                                            var imgSrc = String.Format("data:image/gif; base64, {0}", base64);
                                        }
                                        <img src="@imgSrc" class="img-responsive img-rounded" width="150" height="150" />

                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { idProducto = item.Pdt_id }, new { @class = "btn btn-custom" }) |
                                        @Html.ActionLink("Eliminar", "Delete", new { idProducto = item.Pdt_id }, new { @class = "btn btn-custom" })
                                    </td>
                                </tr>
                                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
