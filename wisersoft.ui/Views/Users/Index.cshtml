@model IEnumerable<WiserSoft.UI.Models.Users>

@{
    ViewBag.Title = "Usuarios";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Usuarios
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-fw fa-users"></i> @Html.ActionLink("Usuarios", "Index", "Users")
                    </li>
                </ol>
            </div>
        </div>
        <div style="text-align:center">
            @Html.ValidationMessage("error_delete", new { @class = "text-danger" })
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Usuario")
                                </th>
                                <th>
                                    @Html.DisplayName("Nombre completo")
                                </th>
                                <th>
                                    @Html.ActionLink("Crear usuario", "Create")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Us_User_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Us_Nombre)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { Us_User_Name = item.Us_User_Name }, new { @class = "btn btn-custom" })  |
                                        @Html.ActionLink("Eliminar", "Delete", new { Us_User_Name = item.Us_User_Name }, new { @class = "btn btn-custom" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
