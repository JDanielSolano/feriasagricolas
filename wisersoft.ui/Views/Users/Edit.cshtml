@model WiserSoft.UI.Models.Users

@{
    ViewBag.Title = "Editar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Edición
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-fw fa-users"></i> @Html.ActionLink("Usuarios", "Index", "Users")
                        </li>
                        <li class="active">
                            <i class="fa fa-edit"></i> Editar usuario
                        </li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <form role="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group  input-group col-md-10">
                            @Html.Label("Nombre usuario", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Us_User_Name, new { htmlAttributes = new { @class = "form-control", disabled= "true" } })
                                @Html.ValidationMessageFor(model => model.Us_User_Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group  input-group col-md-10">
                            @Html.Label("Nombre completo", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Us_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Us_Nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group input-group col-md-10">
                            @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Us_Password, new { htmlAttributes = new { @class = "form-control", type = "Password" } })
                                @Html.ValidationMessageFor(model => model.Us_Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group  input-group col-md-10">
                            @Html.Label("Confirmar contraseña", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ConfirmPassowrd, new { htmlAttributes = new { @class = "form-control", type = "Password" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassowrd, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-10">
                                <button class="btn btn-custom" onclick="location.href='@Url.Action("Index", "Users")';return false;"><i class="fa fa-arrow-left"></i> Volver</button>
                                <input type="submit" value="Crear dato" class="btn btn-custom" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
<div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
